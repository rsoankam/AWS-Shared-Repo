package busSimulator;

import java.sql.*;

import com.mysql.jdbc.Connection;

public class BusSimulator {

	public static void main(String[] args) {
		// TODO Auto-generated method stub
		try {
			Class.forName("com.mysql.jdbc.Driver");
			Connection con = (Connection) DriverManager.getConnection("jdbc:mysql://localhost:3306/test", "root", "root");
			
			// here sonoo is database name, root is username and password
			Statement stmt = con.createStatement();
			stmt.executeQuery("INSERT INTO routes values (1, 'lat1', 'lng1')");
			System.out.println("Inserterd data");
			
			ResultSet rs = stmt.executeQuery("select * routes ");
			while (rs.next())
				System.out.println(rs.getInt(1) + "  " + rs.getString(2) + "  " + rs.getString(3));
			con.close();
		} catch (Exception e) {
			System.out.println(e);
		}
	}
}
